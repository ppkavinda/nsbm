            </HBox.margin>
        </Button>
        <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeButton" text="Remove">
            <HBox.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </HBox.margin>
        </Button>
