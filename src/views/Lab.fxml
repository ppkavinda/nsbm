<VBox alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LabController">
   <children>
       <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
          <children>
              <Label fx:id="titleLabel" text="Labs" />
          </children>
       </HBox>
       <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
          <children>
              <TableView fx:id="labTable" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#selectRow" prefHeight="214.0" prefWidth="373.0">
                  <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <columns>
                      <TableColumn prefWidth="75.0" text="ID">
                          <cellValueFactory>
                              <PropertyValueFactory property="lab_id" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="75.0" text="Name">
                          <cellValueFactory>
                              <PropertyValueFactory property="name" />
                          </cellValueFactory>
                      </TableColumn>
                      <TableColumn prefWidth="75.0"/>

                  </columns>
                  <HBox.margin>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </HBox.margin>
              </TableView>
          </children>
       </HBox>
       <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
          <children>
              <TextField fx:id="nameField" promptText="Lab Name">
                  <HBox.margin>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
              </TextField>
              <Button fx:id="addButton" mnemonicParsing="false" onAction="#addLab" text="Add">
                  <HBox.margin>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
              </Button>
              <Button fx:id="editButton" mnemonicParsing="false" onAction="#editLab" text="Edit">
                  <HBox.margin>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
              </Button>
              <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeLab" text="Remove">
                  <HBox.margin>
                      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                  </HBox.margin>
              </Button>
          </children>
       </HBox>
       <HBox prefHeight="100.0" prefWidth="200.0">
           <VBox.margin>
               <Insets left="10.0" />
           </VBox.margin>
           <Button fx:id="mainMenuButton" onAction="#toMainPanel" mnemonicParsing="false" text="Main Menu">
               <HBox.margin>
                   <Insets />
               </HBox.margin>
               <graphic>
                   <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                       <image>
                           <Image url="@../assets/img/012.png" />
                       </image>
                   </ImageView>
               </graphic>
           </Button>
       </HBox>
   </children>
</VBox>
